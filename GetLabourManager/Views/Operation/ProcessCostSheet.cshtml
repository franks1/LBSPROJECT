
@{
    ViewBag.Title = "ProcessCostSheet";
}

<div id="koserver" style="margin-top:-14px;" class="ui segment">
    @*<div class="ui pointing secondary menu">
        <a class="active item" data-tab="first">PROCESS COST SHEET</a>
    </div>*@
    @Html.Hidden("UserId", ViewBag.UserId as string,new { id= "UserId" })
    <div class="ui bottom attached tab active segment" data-tab="first">
        <div class="ui celled grid">
            <div class="seven wide column">
                <div class="ui small form">
                    <div class="ui fluid field">
                        <label>CLIENTS</label>
                        @Html.DropDownList("VCat", (IEnumerable<SelectListItem>)ViewBag.VClients,
                            "--CLIENTS--", new { @class = "ui cg search dropdown" })
                    </div>
                </div>
                <div class="ui dividing header"></div>
                <div style="position: relative; overflow: hidden;
                overflow-y: scroll; height: 280px; width: 100%;">
                    <table id="tbItems" class="table table-striped table-hover table-condensed">
                        <tr>
                            <td class="text-left">SN</td>

                            <td class="text-left">SELECT</td>
                            <td class="text-left">REQUISITION</td>
                            <td class="text-left">COST SHEET</td>
                            <td class="text-left">CASUALS</td>
                        </tr>
                        <tbody data-bind="foreach:CostSheetEntries">
                            <tr>
                                <td data-bind="text:$index()+1"></td>
                                <td class="text-left">
                                    <input type="checkbox" data-bind="checked:Selected,attr:{'data-vid':CCode}" />
                                </td>
                                <td class="text-left" data-bind="text:RCode"></td>
                                <td class="text-left" data-bind="text:CCode"></td>
                                <td class="text-left" data-bind="text:Casuals"></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="nine wide column">
                <div id="frmRequest" class="ui small form">
                    <div class="two fields">
                        <div class="field">
                            <label>SELECTED COST SHEET(S)</label>
                            <input data-bind="value:SelectedItems().length" type="text" id="txtCostSheetNumber" readonly="readonly" />
                        </div>
                        <div class="field">
                            <label>&nbsp;</label>
                            <button data-bind="click:StartProcessJob,enable:processing" class="btn btn-primary">
                                <i class="calculator icon"></i> PROCESS COST SHEET
                            </button>
                        </div>
                        @*<div class="field">
                            <label>CLIENT</label>
                            <input type="text" id="txtClient" readonly="readonly" />
                        </div>*@
                    </div>
                    @*<div class="row">
                        <div class="col-md-4"></div>
                        <div class="col-md-4"></div>
                        <div class="col-md-4">
                            <button data-bind="click:StartProcessJob,enable:processing" class="btn btn-primary">
                                <i class="fa fa-table"></i> PROCESS COST SHEET
                            </button>
                        </div>
                    </div>*@
                </div>
                <div class="ui dividing header"></div>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <i class="fa fa-terminal"></i> INVOICING LOG
                    </div>
                    <div class="panel-body">
                        <div id="myMessageContainer" style="overflow-y: scroll; height:300px; font-size:small; font-family:'Segoe UI';">
                            <div data-bind="foreach:messages">
                                <div style="font-style:normal" data-bind="text:$data"></div>
                            </div>
                        </div>
                    </div>
                    <br />

                </div>
            </div>
        </div>
    </div>
</div>


