@model app.com.Models.BankSequence

@Html.HiddenFor(c => c.Id)
<div class="panel panel-danger">
    <div class="panel-heading">
        <hi>DELETE SEQUENCE</hi>
    </div>
    <div class="panel-body">
        <div class="ui form">
            <div class="field">
                <div class="four fields">
                  <div class="field">
                      <label>NAME</label>
                      @Html.EditorFor(c => Model.SequenceName, new { htmlAttributes = new { @class = "ui input", @readonly = true } })
                  </div>
                    <div class="field">
                        <label>LENGTH</label>
                        @Html.EditorFor(c => Model.SequenceLength, new { htmlAttributes = new { @class = "ui input",@readonly=true } })
                    </div>
                    <div class="field">
                        <label>NUMBER</label>
                        @Html.EditorFor(c => Model.SequenceNumber, new { htmlAttributes = new { @class = "ui input", @readonly = true } })
                    </div>    

                    <div class="field">
                        <label>TYPE</label>
                        @Html.EditorFor(c => Model.SequenceType, new { htmlAttributes = new { @class = "ui input", @readonly = true } })
                    </div>
                </div>
            </div>
            <div class="field pull-right">
               
                    <button id="btnDelete" class="ui positive button">
                        <i class="delete icon"></i> Delete
                    </button>
                    <button id="btnCancel" class="ui default button">
                        <i class="cancel icon"></i> Cancel
                    </button>
              
            </div>

        </div>
    </div>
</div>
<script type="text/javascript">
    $(function () {
        $('#btnDelete').on('click', function () {
            var Id = $('#Id').val();
            $.post('@Url.Action("DeleteSequence", "Sequence")', { Id: Id }, function (data) {
                if (data.message != 'success')
                    alert(data.message);
                    else
                $('.ui.basic.modal')
                   .modal('hide');
            })
        });

        $('#btnCancel').on('click', function () {
            $('.ui.basic.modal')
                   .modal('hide');
        });
    })
</script>