@model  GetLabourManager.Models.ApplicationRole
@{
    ViewBag.Title = "AddRole";
}

<div class="ui segment">

    <div class="ui pointing secondary menu">
        <a class="active item" data-tab="first">ADD NEW ROLE</a>
    </div>
    <div class="ui bottom attached active tab segment" data-tab="first">
        <div class="row">
            <div class="col-md-8">
                @using (Html.BeginForm("AddRole", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control active" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Description", new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.RoleDescription, new { @class = "form-control" })
                        </div>
                    </div>
                    if (User.IsSysAdmin())
                    {
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <div class="checkbox-inline">
                                    @Html.CheckBoxFor(m => m.IsSysAdmin)
                                    @Html.Label("APPLY AS ADMINISTRATOR")
                                </div>
                            </div>
                        </div>
                    }

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" class="btn btn-default" value="Create" />&nbsp;
                            <a href="@Url.Action("RoleIndex","Admin")" class="btn btn-default"  >Back</a>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
    

    


</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



