@model int
@{if (Model==0)
    {
        <h2><font color="red">No Associated Roles...</font></h2>
        <br />
    }
    else
    {
        @Html.Hidden("RsId", Model)
        <div id="rlist" class="ui small form">
            <table id="idTable" class="table table-striped table-hover table-condensed">
                <tr>
                    <th>
                        Role
                    </th>
                    <th>
                        <center>Action</center>
                    </th>
                </tr>
                <tbody data-bind="foreach:Roles">
                    <tr>
                        <td data-bind="text:Name"></td>
                        <td class="text-center">
                            <button title="Remove" class="btn btn-danger btn-xs" data-bind="attr:{'data-vid':RoleId}">
                                <i class="fa fa-remove"></i>
                            </button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        
    }
}
