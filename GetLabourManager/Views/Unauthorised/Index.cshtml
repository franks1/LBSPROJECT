
@{
    ViewBag.Title = "Unauthorized Request";
    Layout = "~/Views/Shared/_CustomMessage.cshtml";
}
<style>
    /* Set padding to keep content from hitting the edges */
    .body-content {
        padding-left: 100px;
        padding-right: 100px;
    }

    .main {
        padding-top: 100px;
        padding-bottom: 100px;
    }
</style>

