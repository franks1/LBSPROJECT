
@{
    ViewBag.Title = "Index";
}

<div id="koserver" style="margin-top:-12px;font-size:small" class="ui segment">
    <div style="margin-top:0px;" id="ViewModal" class="ui  basic e modal">
        <i class="close icon"></i>
        @*<div class="header">EXEMPTION REASON</div>*@
        <div class="content">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <i class="fa fa-user-times"></i> ENTER REASON TO EXEMPT CASUALS
                </div>
                <div class="panel-body">
                    <div class="ui form">

                        <div class="ui fluid field">
                            <label>REASON</label>
                            <input id="txtReason" type="text" maxlength="50" placeholder="..." style="text-transform:uppercase" />
                        </div>

                        <button data-bind="click:ApplyFlag,enable:FlaggedCasuals().length>0" class="btn btn-danger btn-lg">
                            <i class="fa fa-remove"></i> EXEMPT SELECTED CASUALS
                        </button>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div style="margin-top:0px;" id="ViewModal" class="ui basic a modal">
        <i class="close icon"></i>
        @*<div class="header">EXEMPTION REASON</div>*@
        <div class="content">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <i class="fa fa-thumbs-up"></i> GANG REQUEST APPROVAL 
                </div>
                <div class="panel-body">
                    <div class="ui form">

                        <div class="ui fluid field">
                            <label>ENTER APPROVAL NOTE</label>
                            <input id="txtApprovalNote" type="text" maxlength="50" placeholder="..." style="text-transform:uppercase" />
                        </div>

                        <button data-bind="click:ApproveRequest" class="btn btn-success btn-lg">
                            <i class="fa fa-check"></i> APPROVE GANG ADVICE
                        </button>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div id="frmLoader" class="ui small form">
        <div class="two fields">
            <div class="twelve wide field">
                <div style="width:760px;margin-left:15px;" class="dx-field">
                    <div style="width:780px;" class="dx-field-value">
                        <div style="width:780px;" id="gridBox"></div>
                    </div>
                </div>
            </div>
            <div class="four wide field">
                <input id="txtGangType" type="text" readonly="readonly" placeholder="GANG TYPE" />
            </div>
        </div>
        <div class="three fields">
            <div class="field">
                <label>GANG</label>
                <input id="txtGang" type="text" readonly="readonly" placeholder="GANG" />
            </div>
            <div class="field">
                <label>WORK SCHEDULE</label>
                <input id="txtSchedule" type="text" readonly="readonly" placeholder="WORK SCHEDULE" />
            </div>
            <div class="field">
                <label>PREPARED BY</label>
                <input id="txtPrepared" type="text" readonly="readonly" placeholder="PREPARED BY" />
            </div>
        </div>
    </div>

    <div class="ui pointing secondary menu">
        <a class="active item" data-tab="first"> <i class="fa fa-user-circle"></i> &nbsp;CASUALS</a>
        <a class="item" data-tab="second"> <i class="fa fa-cube"></i> &nbsp;CONTAINERS</a>
        <a class="item" data-tab="third"> <i class="fa fa-user-times"></i> &nbsp;EXEMPT CASUAL MEMBER</a>
    </div>
    <div class="ui bottom attached tab segment active" data-tab="first">
        <table id="tablecasuals" data-search="true"
               data-show-refresh="false"
               data-pagination="true" data-pagesize="5" data-row-style=""
               data-classes="table table-hover table-condensed table-responsive"
               data-pagenumber="1" data-sidePagination="true"></table>
        <p></p>
        <div class="field">
            <label>&nbsp;</label>
            <div class="inline field">
                <div class="ui toggle primary a checkbox">
                    @Html.CheckBox("IsTeller", false,
                                   new { id = "chkTeller", @class = "ui a checkbox" })
                    <label>APPROVE GANG REQUEST</label>
                </div>
            </div>
        </div>
    </div>

    <div class="ui bottom attached tab segment " data-tab="second">
        <table id="tablecontainers" data-search="true"
               data-show-refresh="false"
               data-pagination="true" data-pagesize="5" data-row-style=""
               data-classes="table table-hover table-condensed table-responsive"
               data-pagenumber="1" data-sidePagination="true"></table>
    </div>

    <div class="ui bottom attached tab segment " data-tab="third">


        <table id="tableflagcasuals" data-search="true"
               data-show-refresh="false"
               data-pagination="true" data-pagesize="5" data-row-style=""
               data-classes="table table-hover table-condensed table-responsive"
               data-pagenumber="1" data-sidePagination="true"></table>
        <p></p>
        <div class="field">
            <label>&nbsp;</label>
            <div class="inline field">
                <div class="ui toggle f checkbox">
                    @Html.CheckBox("IsTeller", false,
                                   new { id = "chkTeller", @class = "ui f checkbox" })
                    <label>APPLY EXEMPTION FLAG</label>
                </div>
            </div>
        </div>


    </div>
</div>

@section scripts{
<script src="~/Content/semantic/semantic.min.js"></script>
    <link href="~/Content/semantic/components/checkbox.css" rel="stylesheet" />
    <script src="~/Content/semantic/components/checkbox.js"></script>
    <link href="~/Content/semantic/components/tab.min.css" rel="stylesheet" />
    <script src="~/Content/semantic/components/tab.min.js"></script>
    <link href="~/Content/dx.common.css" rel="stylesheet" />
    <link href="~/Content/dx.light.compact.css" rel="stylesheet" />
    <script src="~/Scripts/dx.all.js"></script>
    <link href="~/Content/bootstrapTable/bootstrap-table.css" rel="stylesheet" />
    <script src="~/Content/bootstrapTable/bootstrap-table.js"></script>
    <script src="~/Scripts/knockout-3.4.2.js"></script>
    <script src="~/js/backoffice/gangrequestApproval.js"></script>

}