@{
    ViewBag.Title = "Time Audit";
}

<div id="koserver" class="ui green segment">
    @Html.Hidden("UserId", ViewBag.UserId as string, new { id = "UserId" })
    <div class="ui celled grid">
        <div class="seven wide column">
            <div class="ui small form">
                <div class="ui fluid field">
                    <label>CLIENTS</label>
                    @Html.DropDownList("VCat", (IEnumerable<SelectListItem>)ViewBag.VClients,
               "--CLIENTS--", new { @class = "ui cg search dropdown" })
                </div>
            </div>
            <div class="ui dividing header"></div>
            <div style="position: relative; overflow: hidden;
                overflow-y: scroll; height: 280px; width: 100%;">
                <table id="tbItems" class="table table-striped table-hover table-condensed">
                    <tr>
                        <td class="text-left">SN</td>
                        <td class="text-left">SELECT</td>
                        <td class="text-left">REQUISITION</td>
                    </tr>
                    <tbody data-bind="foreach:CostSheetEntries">
                        <tr>
                            <td data-bind="text:$index()+1"></td>
                            <td class="text-left">
                                <input type="checkbox" data-bind="checked:Selected,attr:{'data-vid':Code}" />
                            </td>
                            <td class="text-left" data-bind="text:Reference"></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="nine wide column">

            <div class="ui small form">
                <div class="two fields">

                    <div class="field">
                        <label>OVERTIME HRS.</label>
                        <div class="ui labeled input">
                            <div class="ui label">
                                <i class="fa fa-clock-o"></i>
                            </div>
                            <input id="txtOverTime" type="number" max="20" value="0" min="0">
                        </div>
                    </div>
                    <div class="field">
                        <label>SELECTED CASUALS</label>
                        <input data-bind="value:SelectedCostSheet().length" type="number" readonly="readonly" />
                    </div>
                </div>
                <div>
                    <div class="ui fluid field">
                        <label>&nbsp;</label>
                        <button data-bind="click:StartProcessJob,enable:processing" class="ui fluid positive button">
                            <i class="fa fa-clock-o"></i> APPLY TIME SLOTS
                        </button>
                    </div>
                </div>
                <p></p>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <string> <i class="fa fa-terminal"></i> TIME AUDIT</string>
                    </div>
                    <div class="panel-body">
                        <div id="myMessageContainer" style="overflow-y: scroll; height:300px; font-size:small; font-family:'Segoe UI';">
                            <div data-bind="foreach:messages">
                                <!---->
                                <div style="font-style:normal" data-bind="text:$data"></div><!---->
                            </div>
                        </div>
                    </div>
                    <br />
                </div>
            </div>

        </div>

    </div>
</div>

@section scripts{
    <script src="~/Scripts/jquery.signalR-2.2.2.js"></script>
    <script src="~/SignalR/Hubs"></script>
